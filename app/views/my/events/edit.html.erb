<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>イベント編集画面</h1>
      <%= render 'my/events/error', event: @event %>
      <%= form_with model: [@team, @event],url:my_team_event_path(@team.id,@event.id), local:true do |f| %>
      <div class="form-group">
          <%= f.label :イベント名 %>
          <%= f.text_field :event_name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :イベント説明文 %>
          <%= f.text_area :event_explanation, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :イベント開始時刻 %>
          <%= f.datetime_field :time %>
        </div>
        <div class="form-group">
          <%= f.submit "編集完了", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>
  </div>
</div>