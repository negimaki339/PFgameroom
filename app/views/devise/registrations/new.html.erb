<div class="container">
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>新規登録</h1>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :ユーザーネーム %><br />
                 <%= f.text_field :name, autofocus: true, class: "form-control name" %>
            </div>

            <div class="form-group">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control password" %>
            </div>

            <div class="form-group">
              <%= f.label :パスワード（確認） %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control password" %>
            </div>

            <div class="form-group form-check">
              <%= f.submit "新規登録", class: "btn btn-info mb-3 sign_in" %>
            </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
