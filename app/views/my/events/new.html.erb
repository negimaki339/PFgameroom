<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      </div>
      <%= form_with model: [:my_team, @event], local:true do |f| %>
      <%= f.label :イベント名 %>
      <%= f.text_field :event_name %>
      <%= f.label :イベント説明 %>
      <%= f.text_area :event_explanation %>
      <%= f.label :イベント開始時間 %>
      <%= f.datetime_field :time %>
      <%= f.submit "イベント登録",class:"btn btn-success" %>
      <% end %>

</div>
</div>