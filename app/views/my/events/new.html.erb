<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      </div>
       <div class="col-sm-8 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <%= render 'my/events/error', event: @event %>
          <h1>新規イベント作成</h1>
          <%= form_with model: [:my_team, @event], local:true do |f| %>
            <div class="form-group">
              <%= f.label :イベント名 %>
              <%= f.text_field :event_name, class: "form-control name" %>
            </div>
            <div class="form-group">
              <%= f.label :イベント説明 %>
              <%= f.text_area :event_explanation, rows:'5',  class: "form-control introduction" %>
            </div>
            <div class="form-group">
              <%= f.label :イベント開始時間 %>
              <%= f.datetime_field :time %>
              <%= f.submit "イベント登録",class:"btn btn-success" %>
            </div>
          <% end %>
      </div>
  </div>
</div>