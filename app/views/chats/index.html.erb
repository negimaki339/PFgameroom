<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
        <%= render 'users/info', user: current_user %>
    </div>
        <div class='col-md-9'>
             <%= render 'myteams/myheader', team: @team %>
        チャット一覧
              <% @chats.each do |chat| %>

                  <%= attachment_image_tag(chat.member.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %>
                  <%= chat.member.user.name %>
                  <%= chat.created_at.strftime('%Y/%m/%d') %>
                  <%= chat.comment %>

                        <% if chat.member.user == current_user %>
                         <%= link_to "Destroy",myteam_chat_path(@team.id, chat.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
                        <% end %>

              <% end %>

              <%= form_with(model: Chat.new,url:myteam_chats_path(@team.id)) do |f| %>
              <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
              <%= f.submit "送信" %>
              <% end %>
        </div>
  </div>
</div>