<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>


        </div>
        マイチーム一覧ページ

        チーム作成
       <%= form_with model: @team, local:true do |f| %>
        <div class="form-group">
          <%= label :ゲーム名 %>
          <%= f.text_field :game_name %>
        </div>
        <div class="form-group">
          <%= label :チーム名 %>
          <%= f.text_field :team_name %>
        </div>
        <div class="form-group">
          <%= f.label :メンバー募集文 %>
          <%= f.text_area :team_explanation %>
        </div>
          <%= f.radio_button :is_join, true  %>
          <%= f.label :is_join, "自由加入制" %>
          <%= f.radio_button :is_join, false %>
          <%= f.label :is_join, "承認制" %>
          <%= f.submit "新規登録",class:"btn btn-success" %>
        <% end %>

  </div>
</div>
