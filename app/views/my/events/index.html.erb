<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
        <%= render 'users/info', user: current_user %>
    </div>
        <div class='col-md-9'>
             <%= render 'my/teams/myheader', team: @team %>
               <h1 class="my-3 ml-3">イベント一覧</h1>
               <table class="table">
                  <thead>
                    <tr>
                        <th>開始時刻</th>
                        <th>イベント名</th>
                        <th>開催者</th>
                        <th>イベント説明</th>
                    </tr>
                  </thead>
                    <tbody>
                      <% @events.each do |event| %>
                      <tr>
                        <td><%= event.time.strftime("%Y年%m月%d日%H時%M分") %></td>
                        <td><%= link_to event.event_name, my_team_event_path(@team,event) %></td>
                        <td><%= event.member.user.name %></td>
                        <td><%= event.event_explanation %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                <%= link_to(new_my_team_event_path) do %>
                新規イベント作成
                <% end %>
        </div>
  </div>
</div>